<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ferrin.cookapp.ui.RecipeListView">

    <top>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="searchTab" text="Search Recipes">
                    <VBox>
                        <HBox spacing="10" styleClass="search-controls" alignment="CENTER_LEFT">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <Label text="Ingredients:"/>
                            <TextField fx:id="ingredientInput" promptText="Enter ingredients (comma separated)"
                                       prefWidth="200"/>

                            <Label text="Cuisine:"/>
                            <ComboBox fx:id="cuisineComboBox" prefWidth="120"/>

                            <Label text="Max cook time (min):"/>
                            <Spinner fx:id="cookTimeSpinner" prefWidth="80"/>

                            <CheckBox fx:id="veganCheckBox" text="Vegan"/>
                            <CheckBox fx:id="vegetarianCheckBox" text="Vegetarian"/>
                            <CheckBox fx:id="glutenFreeCheckBox" text="Gluten Free"/>

                            <Button text="Search" onAction="#onSearch" styleClass="search-button"/>
                        </HBox>

                        <ListView fx:id="recipeListView" BorderPane.alignment="CENTER"/>
                    </VBox>
                </Tab>

                <Tab fx:id="favoritesTab" text="My Favorites">
                    <ListView fx:id="favoritesListView" BorderPane.alignment="CENTER"/>
                </Tab>
            </tabs>
        </TabPane>
    </top>

    <center>
        <!-- This can be used for additional content if needed -->
        <StackPane/>
    </center>

</BorderPane>